# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For production, ensure your database supports SSL
DATABASE_URL=postgresql://user:pass@host:5432/dbname
# Set to 'false' only if your database provider doesn't support proper SSL certificates
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Session Security (REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# MUST be at least 32 characters in production
SESSION_SECRET=your-secret-key-change-this

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Application URL (used in email links)
APP_URL=https://emp.ametsa.io

# Scheduler Configuration
TIMEZONE=America/New_York
EMAIL_SCHEDULE_TIME=0 8 * * *

# Admin User Configuration (REQUIRED for production)
# Username: 3-50 characters, alphanumeric
ADMIN_USERNAME=admin
# Password Requirements (Production):
#   - Minimum 12 characters
#   - Cannot be common defaults (changeme, password, admin)
#   - Cannot match username
ADMIN_PASSWORD=your-secure-password-here
